{
   "manifest_version": 3,
   "name": "__MSG_extName__",
   "default_locale": "en",
   "version": "2025.03.16",
   "action": {
      "default_popup": "popup/index.html",
      "default_icon": "assets/feather-solid-128.png",
      "default_title": "__MSG_actionTitle__"
   },
   "description": "__MSG_extDescription__",
   "homepage_url": "https://github.com/shungiku/memos-bber",
   "icons": {
      "128": "assets/feather-solid-128.png",
      "16": "assets/feather-solid-16.png",
      "32": "assets/feather-solid-32.png",
      "48": "assets/feather-solid-48.png"
   },
   "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
   "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "contextMenus"
   ],
   "host_permissions": ["http://*/*", "https://*/*"],
   "commands": {
      "open-extension": {
        "description": "Open my extension",
        "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
        }
      }
    }
} 